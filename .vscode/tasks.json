{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-rel",
            "type": "shell",
            "command": "clear && colcon build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build"
        },
        {
            "label": "build-dbg",
            "type": "shell",
            "command": "clear && colcon build --symlink-install --cmake-args -DCMAKE_BUILD_TYPE=Debug",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build"
        },
        {
            "label": "launch sim",
            "type": "shell",
            "command": "source ${workspaceFolder}/install/setup.bash && ros2 launch bimbot spawn_robots.launch.py",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build"
        },
        {
            "label": "bimini_node",
            "type": "shell",
            "command": "source ${workspaceFolder}/install/setup.bash && ros2 run bimini bimini_node",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build"
        },
        {
            "label": "bimini_client",
            "type": "shell",
            "command": "source ${workspaceFolder}/install/setup.bash && ros2 run bimini bimini_client",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build"
        },
        {
            "label": "clear build",
            "type": "shell",
            "command": "rm -rf build/ install/",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build"
        },
    ]
}